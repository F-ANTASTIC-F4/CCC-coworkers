// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Group {
  id      String   @id
  members Member[]
}

model Member {
  id       Int     @id
  isOnline Boolean @default(false)
  group    Group   @relation(fields: [groupId], references: [id])
  groupId  String
}